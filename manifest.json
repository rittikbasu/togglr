{
  "manifest_version": 3,
  "name": "Togglr",
  "version": "1.0",
  "description": "Toggle ChatGPT modes with shortcuts.",
  "permissions": ["storage", "tabs"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png",
    "256": "icon.png",
    "512": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Mode Shortcuts",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png"
    }
  }
}
